<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Emojo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mystic</item>
        <item name="colorPrimaryVariant">@color/mystic</item>
        <item name="colorOnPrimary">@color/lilac</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mystic</item>
        <item name="colorSecondaryVariant">@color/mystic</item>
        <item name="colorOnSecondary">@color/mystic</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/megrim</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/lilac</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

</resources>